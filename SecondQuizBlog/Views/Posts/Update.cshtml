@model UpdatePostViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<form asp-controller="Posts" asp-action="Update" method="post" enctype="multipart/form-data">
    
    <div class="mb-3">
        <select class="form-select" asp-items="@ViewBag.selectList" asp-for="CategoryId">
        </select>
    </div>
    <input type="hidden" asp-for="Id"/>
    <div class="form-group mb-3">
        <label asp-for="@Model.Title">Başlık Alanı Giriniz</label>
        <input class="form-control" asp-for="Title"/>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.ContentText">İçerik giriniz</label>
        <textarea class="form-control" asp-for="ContentText"></textarea>
        <span class="text-danger" asp-validation-for="ContentText"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Image">Fotoğraf seçiniz</label>
        <input type="file" class="form-control" asp-for="Image"/>
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
