@model CreatePostViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form asp-controller="Posts" asp-action="Create" method="post">
    
    <div class="mb-3">
        <select class="form-select" asp-items="@ViewBag.selectList" asp-for="@Model.CategoryId">
        </select>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="@Model.Title">Başlık Alanı Giriniz</label>
        <input class="form-control" asp-for="@Model.Title"/>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.ContentText">İçerik giriniz</label>
        <input class="form-control" asp-for="@Model.ContentText"/>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

